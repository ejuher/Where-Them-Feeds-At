<div class="header row">
	<div class="col-xs-1">
		<a href="#menu-toggle" 
    class="btn btn-default" 
    id="menu-toggle">
   		<span class="glyphicon glyphicon-chevron-left"></span>
    </a>
	</div>
	<div class="col-xs-3 add-feed">
  	<form id="add-feed">
  		<div class="form-group has-feedback">
  			<input type="text" class="form-control" placeholder="add feed url">
  		</div>
  	</form>	
	</div>
	<div class="col-xs-3">
		<% var title = feed.escape('title') %>
		<h4><%= title %></h4>
	</div> 
	<div class ="col-xs-1">
		<% if (!feed.isNew() || title === 'All') { %>
			<button type="button" id="refresh" class="btn btn-default" data-subscription-id="<%= feed.escape('subscription_id') %>">Refresh</button>
		<% } %>
	</div>
	<div class="col-xs-2">
		<% if (!feed.isNew()) { %>
			<button type="button" id="unsubscribe" class="btn btn-default" data-subscription-id="<%= feed.escape('subscription_id') %>">Unsubscribe</button>
		<% } %>
	</div>
	<div class="col-xs-2">
		<button type="button" id="sign-out" class="btn btn-default">Log Out</button>
	</div>
</div>


<div id="entries"></div>
