<div class="col-lg-12">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <a href="<%= entry.escape('url') %>"><h3 class="panel-title"><%= entry.escape('title') %></h3></a>
	  </div>
	  <div class="panel-heading sub-heading">
			<a href="<%= '/#feed/' + entry.get('feed_id') %>"><small><%= entry.escape('feed') %></small></a>
	  	<% t = new Date(entry.escape('published')) %>
			<small class="published"><%= t.toLocaleString() %></small></h3>
		</div>	
	  <div class="panel-body">
	    <%= entry.get('content') %>
	  </div>
	</div>			    
</div>
